<h2>Available drones</h2>
<button><a href="/drones/create">Create a new drone</a></button>
{{#each allDrones}}
<div>
  <p>{{this.name}}</p>
  <p>{{this.propellers}}</p>
  <p>{{this.maxSpeed}}</p>
  {{this._id}}
  <a href="/drones/{{_id}}/edit">Drone update</a>
  <form action="/drones/{{_id}}/delete" method="post">
  <button>Delete</button>
  </form>
</div>
{{/each}}