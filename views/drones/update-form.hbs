<h2>Update the drone</h2>

<form action="/drones/{{_id}}/edit" method="post">

  <label for="name">Name :</label>
  <input type="text" name="name" id="nameInput" value="{{name}}" />

  <label for="propellers">Propellers:</label>
  <input type="number" name="propellers"  value="{{propellers}}" />

  <label for="maxSpeed">Max Speed:</label>
  <input type="number" name="maxSpeed" id="maxSpeedInput" min="1" value="{{maxSpeed}}" />

  <button type="submit">Save changes</button>

</form>